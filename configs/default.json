{
    "config_name": "default",
    "dataset": {
      "training_ids_file_path": "./train_ids.csv",
      "validation_ids_file_path": "./val_ids.csv",
      "test_ids_file_path": "./test_ids.csv",
      "training_annotation_file_path": "./data/annotations/captions_train2014.json",
      "test_annotation_file_path": "./data/annotations/captions_val2014.json",
      "images_root_dir": "./data/images/",
      "vocabulary_threshold": 2,
      "img_size": 256,
      "batch_size": 64,
      "num_workers": 1
    },
    "config": {
      "num_epochs": 10,
      "learning_rate": 5e-4,
      "optimizer": "adam",
      "weight_decay": 1e-4,
      "lr_scheduler": "steplr",
      "step_size": 3,
      "gamma": 0.1,
      "early_stop": "true",
      "patience": 3
    },
    "model": {
      "hidden_size": 512,
      "embedding_size": 300,
      "model_type": "Custom",
      "keep_image": false,
      "dropout_rate": 0
    },
    "generation": {
      "max_length": 20,
      "deterministic": false,
      "temperature": 0.4
    },
    "develop":{
      "log_captions": true
    }
  }